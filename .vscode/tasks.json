{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Instrument all",
      "type": "shell",
      "command": "mvn compile && ./scripts/instrument.sh ${input:instrumentation_type}",
      "problemMatcher": [],
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "instrumentation_type",
      "description": "Which instrumentation do you want",
      "options": [
        "fuzzing",
        "symbolic",
        "patching",
      ],
      "default": "fuzzing"
    },
  ]
}